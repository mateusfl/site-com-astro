---
export interface Props {
  titulo: string
  slug: string
  conteudo: string
  imgSrc: string
}

const { titulo, slug, conteudo, imgSrc } = Astro.props as Props
---

<a href={`/${slug}`} target="blank">
  <div
    class="w-fit flex items-center justify-center gap-3 transition-all hover:bg-terciaria"
  >
    <div class="flex flex-col gap-3 pl-4 w-80">
      <h3 class="font-semibold text-xl">{titulo}</h3>
      <p class="">{conteudo}</p>
    </div>
    <div>
      <img class="h-[360px]" src={imgSrc} alt="imagem" />
    </div>
  </div>
</a>
