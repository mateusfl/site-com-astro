---
export interface Props {
  titulo: string
  slug: string
  conteudo: string
  imgSrc: string
}

const { titulo, slug, conteudo, imgSrc } = Astro.props as Props
---

<a href={`/${slug}`}>
  <div
    class="w-fit flex flex-col-reverse items-center justify-center gap-3 transition-all hover:bg-terciaria md:flex-row"
  >
    <div class="flex flex-col gap-3 pl-4 w-80">
      <h3 class="font-semibold text-xl">{titulo}</h3>
      <p class="">{conteudo}</p>
    </div>
    <div>
      <img
        class="h-40 w-80 md:h-80 md:w-60 object-cover"
        src={imgSrc}
        alt="imagem"
      />
    </div>
  </div>
</a>
