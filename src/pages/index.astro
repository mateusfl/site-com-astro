---
import imgSrc from '../img01.jpg'
import Card from '../components/Card.astro'
import Base from '../layouts/base.astro'

const posts = await Astro.glob('../posts/*.md')
---

<html lang="pt-BR">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
  </head>

  <body class="font-body text-lg bg-branco">
    <Base title="Meu Blog">
      <main class="h-full mt-24 flex flex-col items-center gap-6">
        {
          posts.map((post) => (
            <Card
              titulo={post.frontmatter.title}
              slug={post.frontmatter.slug}
              conteudo={post.frontmatter.resumo}
              imgSrc={post.frontmatter.imgSrc}
            />
          ))
        }
      </main>
    </Base>
  </body>
</html>
