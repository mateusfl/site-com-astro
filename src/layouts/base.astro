---
export interface Props {
  title: string
}
const { title } = Astro.props as Props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-teal-200 p-3 flex items-center justify-around">
      <h3 class="text-2xl">Meu Blog</h3>
      <nav class="flex gap-3">
        <a href="">Home</a>
        <a href="">Sobre</a>
      </nav>
    </header>
    <slot />
    <footer class="bg-teal-200 flex gap-3 justify-center">
      <span>Criado por Mateus Felipe</span>
      <span>2022</span>
    </footer>
  </body>
</html>
